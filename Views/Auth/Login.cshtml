<!DOCTYPE html>
@model AxonAccessMVC.Models.Clases.Usuario
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<html>
<head>
    <title>@ViewBag.Title - AxonAccess</title>
    <link rel="icon" href="~/images/favicon.png" sizes="32x32" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" />
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

    <!-- Custom Theme files -->
    <link href="~/styles/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/styles/font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
    <!-- //web font -->
</head>
<body>

    <div class="w3layouts-main">
        <div class="bg-layer">
            <h1>AxonAccess</h1>
            <div class="header-main">
                <div class="main-icon">
                    <span ><img src="~/images/favicon.png" width="180" height="180"></span>
                </div>
                <div class="header-left-bottom">
                    <form action="#" method="post">
                        <div class="icon1">
                            <span class="fa fa-user"></span>
                            <input placeholder="Email Address" required="" @Html.TextBoxFor(u => u.Mail, new { type = "email" })

                        </div>
                        <div class="icon1">
                            <span class="fa fa-lock"></span>
                            <input placeholder="Password" required="" @Html.PasswordFor(u => u.Pass)
                        </div>
                        <div class="login-check">
                            <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i> Keep me logged in</label>
                        </div>
                        <div class="bottom">
                            <button class="btn">Log In</button>
                        </div>
                        <div class="links">
                            <p><a href="#">Forgot Password? </a></p>
                            <div class="clear"></div>
                        </div>
                    </form>
                </div>
                <!-- copyright -->
                <div class="copyright">
                    <p>© 2020 All rights reserved | Design by <a href="http://Axonia.cl/" target="_blank">Axonia</a></p>
                </div>
                <!-- //copyright -->
                @{

                    if (@TempData.Count>0)
                    {
                        <script type="text/javascript">
                            var texto = 'CREDENCIALES INCORRECTAS';
                            swal({
                                title: '',
                                text: texto,
                                type: 'error'
                            });

                        </script>
                    }
                }

            </div>
        </div>
    </div>
</body>

</html>

